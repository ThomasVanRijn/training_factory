{% extends 'base.html.twig' %}

{% block title %}Lesson index{% endblock %}

{% block body %}

    <div class="container">
        <h1>Lessen beheer</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Time</th>
                <th>Date</th>
                <th>Location</th>
                <th>Max_persons</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lesson in lessons %}
                {% if app.user.id == lesson.instructeur.id %}
                <tr>
                    <td>{{ lesson.id }}</td>
                    <td>{{ lesson.time ? lesson.time|date('H:i') : '' }}</td>
                    <td>{{ lesson.date ? lesson.date|date('Y-m-d') : '' }}</td>
                    <td>{{ lesson.location }}</td>
                    <td>{{ lesson.maxPersons }}</td>
                    <td>
                        <a class="btn btn-outline-success" href="{{ path('lesson_show', {'id': lesson.id}) }}">show</a>
                        <a class="btn btn-outline-warning" href="{{ path('lesson_edit', {'id': lesson.id}) }}">edit</a>
                        {{ include('lesson/_delete_form.html.twig') }}
                    </td>
                </tr>
                {% endif %}
            {% else %}
                <tr>
                    <td colspan="6">Er zijn geen lessen</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
