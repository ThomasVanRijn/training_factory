{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
    <div class="container">
        <h1>Training</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Image</th>
                <td><img class="img-fluid" src="{{ asset('img/uploads/' ~ training.brochureFilename) }}" style="height: 250px"></td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ training.naam }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ training.description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ training.duration ? training.duration|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Costs</th>
                <td>{{ training.costs }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-outline-success" href="{{ path('admin_training_index') }}">back to list</a>

        <a class="btn btn-outline-warning" href="{{ path('admin_training_edit', {'id': training.id}) }}">edit</a>

        {{ include('training/_delete_form.html.twig') }}
    </div>
{% endblock %}
